<h1>Lista de usuarios</h1>

<table>
  <tr>
    <td>Nombre</td>
    <td>Email</td>
  </tr>

  <% @usuarios.each do |usuario|%>

    <tr>
      <td><%= link_to usuario.nombre, usuario %></td>
      <td><%= usuario.email %></td>
      <td> <%= link_to 'Editar', edit_user_path(usuario) %> </td>
      <td> <%= link_to 'Eliminar', usuario, method: :delete, confirm:'Sure?' %> </td>
    </tr>

  <% end %>

  <%if @usuarios.size == 0%>
    <p>No hay usuarios en la base de datos.</p>
  <% end %>
</table>

<%= link_to "Crear nuevo usuario", new_user_path %>